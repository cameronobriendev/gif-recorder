{
  "manifest_version": 3,
  "name": "GIF Recorder",
  "version": "2.0.0",
  "description": "Record your screen and convert to GIF",
  "permissions": [
    "tabs",
    "storage",
    "downloads",
    "nativeMessaging",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "GIF Recorder"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/light/icon16.png",
    "48": "icons/light/icon48.png",
    "128": "icons/light/icon128.png"
  }
}
